<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <report
        id="report_sale_order_list"
        model="account.invoice"
        string="Lista de Facturas X Fecha"
        report_type="qweb-pdf"
        name="account.report_invoice_list"
        file="account.report_invoice_list"
        menu="False"
    />

    <template id="account.report_invoice_list_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <h3>
                                <span >CUADRE DE CAJA</span>
                            </h3>
                            Fecha: <span t-esc="get_current_datetime()"/>
                        </div>
                    </div>
                    <div class="row mt16 mb16">
                        <div class="col-xs-6">
                            <span>Cashier: <span t-esc="get_cashier_name(data['form'])"/></span>
                        </div>
                        <div class="col-xs-6 text-right">
                            Desde: <span t-esc="data['form']['date_start']"/><br/>
                            Hasta: <span t-esc="data['form']['date_end']"/>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-foreach="get_header(data['form'])" t-as="h" class="text-center">
                                    <span t-esc="h"/>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr t-foreach="compute_orders(data['form'])" t-as="o">
                                <td>
                                   <span t-esc="o['partner']"/>
                                </td>
                                <td>
                                   <span t-esc="o['folio']"/>
                                </td>
                                <td>
                                   <span t-esc="o['room_number']"/>
                                </td>
                                <td class="text-right">
                                   <span t-esc="formatLang(o['cash'])"/>
                                </td>
                                <td class="text-right">
                                   <span t-esc="formatLang(o['bank'])"/>
                                </td>
                                <td class="text-right">
                                    0.0
                                </td>
                                <td class="text-right">
                                   <span t-esc="o['receipt']"/>
                                </td>
                                <td class="text-right">
                                    ---
                                </td>
                                <td class="text-right">
                                    ---
                                </td>
                            </tr>
                            <tr>
                                <t t-foreach="sum_total_payments()" t-as="p">
                                    <th/>
                                    <th/>
                                    <th/>
                                    <th class="text-right">
                                        <span t-esc="formatLang(p['Efectivo'])"/>
                                    </th>
                                    <th class="text-right">
                                        <span t-if="p['Tarjeta']">
                                            <span t-esc="formatLang(p['Tarjeta'])"/>
                                        </span>
                                    </th>
                                    <th class="text-right">
                                        <span t-esc="formatLang(0.0)"/>
                                    </th>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
    </template>

    <template id="account.report_invoice_list">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'account.report_invoice_list_document')"/>
            </t>
        </t>
    </template>

</data>
</openerp>